
jQuery.noConflict();

(function($) {

Number.prototype.toFormatString = function(place) {
	place = place || 2;
	var str = this.toString();
	while (str.length < place) str = '0'+str;
	return str;
};


$.extend($.browser, {
	msie6: $.browser.msie && $.browser.version < 7
});

$.fn.roll = function roll(o) {
	o = o || '_o';
	return this.each(function() {
		var src = this.src;
		if (!src) {
			var target = $('img, input[type="button"]', this);
			if (target.length) roll.call(target);
			return;
		}

		var out  = src;
		var over = src.replace(/(\.[^.]+$)/, o+'$1');
		$('<img src="'+over+'"/>');
		$(this).hover(
			function() { this.src = over; },
			function() { this.src = out; }
		);
	});
};

$.fn.fl = function () {
	var id = this.attr('id');
	return document[id] || window[id];
};


