if (typeof UNIQLO == 'undefined') UNIQLO = {};
if (typeof UNIQLO.Store == 'undefined') UNIQLO.Store = {};


UNIQLO.Store.Topic = {
	setup: function() {
		$('.inr').each(function() {
			var self = $(this);
			var tooltip = $('.tooltip', self);
			if (!tooltip.length) return;

			var topic = UNIQLO.Store.Topic;
			self
				.bind('mouseenter', { tooltip: tooltip }, topic.show_tooltip)
				.bind('mouseleave', { tooltip: tooltip }, topic.hide_tooltip);
		});
	},

	show_tooltip: function(e) {
		e.data.tooltip.show();
	},

	hide_tooltip: function(e) {
		e.data.tooltip.hide();
	}
};


UNIQLO.Store.GlobalMenu = {
	setup: function() {
		UNIQLO.Store.GlobalMenu.shoppingBasket();
	},

	shoppingBasket: function() {
		if ($.browser.msie6)
			$('#header .cart').hover(
				function() { $(this).addClass('hover'); },
				function() { $(this).removeClass('hover'); }
			);
	}
};


UNIQLO.Store.Size = {
	setup: function() {
		$('#utilMainItemList .refine01 select').change(function() {
			var uri = UNIQLO.Store.Size.filter($(this).val());
			location.href = uri;
		});
	},

	filter: function(size) {
		var q = {
			dispNo: disp_no
		};

		if (size && size != 'title') {
			size = size.toUpperCase();
			$.extend(q, {
				action          : 'size'+size,
				sizeFilterToggle: size
			});
		}
		return '../disp/CSfDispListPage_002.jsp?'+$.param(q);
	}
};


UNIQLO.Store.ItemSize = (function() {
	var itemList = null;

	return {
		setup: function() {
			itemList = $('#blkMainItemList');

			var buttons = ['small', 'large'];
			var currentSize = 'small';

			var b = $('#utilMainItemList .ctrlDisp02 dd');
			b
				.each(function(i) {
					var size = buttons[i];
					var index = (i + 1).toFormatString();
					$(this)
						.bind('toggleSize', function() {
							if (currentSize == size) {
								$(this).html('<em><img src="/img/l3/btn-disp-size-'+index+'-o.gif" alt="" width="17" height="17"/></em>');
								UNIQLO.Store.ItemSize[size]();
								UNIQLO.Store.Liquid.resize();
							}
							else
								$(this)
									.html('<a href="#"><img src="/img/l3/btn-disp-size-'+index+'.gif" alt="" width="17" height="17"/></a>')
									.find('img').roll();
						})
						.click(function() {
							if (size == currentSize) return false;
							currentSize = size;
							b.each(function() {
								$(this).trigger('toggleSize');
							});
							return false;
						});
				})
				.eq(1).find('img').roll();
		},

		small: function() {
			itemList
				.data('size', 's')
				.removeClass('blkUnitSize02').addClass('blkUnitSize01')
				.find('.unit .thumb img')
					.each(function() {
						$(this).attr({
							src   : this.src.replace(/(Mode=size)\d/, '$12'),
							width : 150,
							height: 150
						});
					});
		},

		large: function() {
			itemList
				.data('size', 'l')
				.removeClass('blkUnitSize01').addClass('blkUnitSize02')
				.find('.unit .thumb img')
					.each(function() {
						$(this).attr({
							src   : this.src.replace(/(Mode=size)\d/, '$14'),
							width : 350,
							height: 350
						});
					});
		}
	};
})();


UNIQLO.Store.Liquid = (function() {
	var container = null;
	var itemList = null;
	var unitLength = null;
	var recentWidth = 0;

	var deadSpace = 190; // menu
	var minWidth = 950;

	return {
		setup: function() {
			container = $('#container');
			itemList = $('#blkMainItemList');
			unitLength = $('.unit', itemList).length;

			var trigger = null;
			$(window).bind('resize.liquid', function() {
				clearTimeout(trigger);
				trigger = setTimeout(UNIQLO.Store.Liquid.resize, 250);
			});
		},

		resize: function() {
			var l = UNIQLO.Store.Liquid;
			var width = Math.max(deadSpace + l.column_size() * l.column_length(), minWidth);
			if (width == recentWidth) return width;

			container.animate({ width: width }, {
				duration: 'slow',
				easing  : 'easeOutCubic'
			});

			return recentWidth = width;
		},

		column_length: function(width) {
			width = width || $(window).width();
			return Math.min(
				Math.floor((width - deadSpace - 50) / UNIQLO.Store.Liquid.column_size()),
				unitLength
			);
		},

		column_size: function() {
			return ({ s: 190, l: 380 })[itemList.data('size') || 's'];
		}
	};
})();


UNIQLO.Store.ItemImage = (function() {
	var img_container = null;
	var swf_container = null;
	var swf_src;

	return {
		setup: function() {
			swf_container = $('#swfProdImgHolderSWF');
			img_container = $('#prodImgDefault').click(function() {
				UNIQLO.Store.ItemImage.launch(swf_src);
			});
		},

		launch: function(src) {
			img_container.hide();
			if (src)
				Deferred.next(function() {
					swf_container.fl().enlarge(src);
				});
		},

		select: function(src, swf) {
			if (!!swf_src && $(':hidden', img_container).length) // through at onload, selected
				Deferred.next(function() {
					swf_container.fl().invisibleImage();
				});
			swf_src = swf;
			img_container
				.show()
				.find('img').attr('src', src);
		}
	};
})();


UNIQLO.Store.Search = (function() {
	var tabs = null;
	var contents = null;
	
	return {
		setup: function() {
			tabs = $('.tabProdSearch li');
			contents = $('.blkProdSearchOptions');

			$('.tabProdSearch li')
				.each(function(i) {
					$('a', this).click(function() {
						UNIQLO.Store.Search.switch_tab(i);
						return false;
					});
				});
		},

		switch_tab: function switch_tab(index) {
			tabs.each(function(i) {
				var tab = $(this);
				var content = contents.eq(i);

				var img = $('img', tab).clone();
				var src = img.attr('src');
				if (i == index) {
					img.attr('src', src.replace(/(?:-o)?(\.[^.]+)$/, '-o$1'));
					tab.html(img);
					content.show();
				}
				else {
					img.attr('src', src.replace(/-o(\.[^.]+)$/, '$1'));
					var a = $('<a href="#"/>')
						.html(img)
						.click(function() {
							switch_tab(i);
							return false;
						})
						.roll();
					tab.html(a);
					content.hide();
				}
			});
		}
	};
})();


