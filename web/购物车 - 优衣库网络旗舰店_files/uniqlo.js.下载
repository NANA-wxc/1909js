UNIQLO.Store.Login.isLogin = (function() {
    var loginStyleTag = '<style type="text/css"> .login { position: absolute; top: 0; left: 0; width: 0; height: 0; visibility: hidden; }</style>';
    var logoutStyleTag = '<style type="text/css"> .logout { position: absolute; top: 0; left: 0; width: 0; height: 0; visibility: hidden; }</style>';
    if ($.cookie('lg') == 'true') {
        $('head').append(loginStyleTag);
    } else {
        $('head').append(logoutStyleTag);
    }
});
UNIQLO.Store.Login.isLogin();

